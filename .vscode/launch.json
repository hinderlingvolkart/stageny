	"version": "0.2.0",
	"configurations": [
		{
			"type": "pwa-node",
			"name": "Run test build",
			"runtimeExecutable": "node",
			"runtimeArgs": ["--loader", "ts-node/esm"],
			"request": "launch",
			"args": ["build.js"],
			"cwd": "${workspaceFolder}/packages/stageny-base/test/"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Build combined",
			"skipFiles": ["<node_internals>/**"],
			"cwd": "${workspaceFolder}/test/combined/",
			"program": "./tasks/build.js"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Serve combined",
			"skipFiles": ["<node_internals>/**"],
			"cwd": "${workspaceFolder}/test/combined/",
			"program": "./tasks/serve.js"
		}
	]
}
